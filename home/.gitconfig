[user]
  name = woody
  email = woody@triple-corp.com

[github]
  user = zprime0920

[alias]
  discard = reset --hard HEAD
  sign = commit -S -m
  signtag = 'tag -s -m ""'

  st = status
  d = diff
  dfs = diff --compact-summary

  co = switch
  sw = switch

  br = branch
  chp = cherry-pick
  fa = fetch --all -p
  pl = pull
  pla = pull --all -pull
  ps = push
  psf = push -f

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbs = rebase --skip
  rbe = rebase --edit-todo

  s = show

  rvt = revert
  rh = reset --hard

  lg = log
  graph = log --graph
  last = log -n 10
  whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
  rmtag = "!sh -c 'git tag -d $1; git push origin :refs/tags/$1'"

  release   = !sh "$HOME/Developer/personal/dotfiles/git-extras/git-release.sh"
  sign-release   = !sh "$HOME/Developer/personal/dotfiles/git-extras/git-sign-release.sh"
  setup     = !zsh "$HOME/Developer/personal/dotfiles/git-extras/git-setup.sh"
  summary   = !zsh "$HOME/Developer/personal/dotfiles/git-extras/git-summary.sh"
  pr = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1; } ; f"
  cleanup = !ruby "$HOME/Developer/personal/dotfiles/git-extras/git-cleanup.rb"

[push]
  default = simple

[color]
  ui = true

[core]
  editor = code
  excludesfile = ~/.gitignore
  pager = diff-so-fancy | less --tabs=4 -RFX

[format]
  pretty = %Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset %C(bold yellow)%GK%Creset
  graph = true

[advice]
  statusHints = false

[log]
  abbrevCommit = true

[mergetool]
  keepBackup = false

[pull]
  rebase = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22

[color "diff"]
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
